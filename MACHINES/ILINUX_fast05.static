ifneq (,$(findstring ILINUX_fast05.static, ${MACHINE}))
	F77 = ifort
	F90 = ifort
	PATH_MKL = ${MKLROOT}/lib/intel64/
	PATH_INCL = -I${MKLROOT}/include/
	PATH_FFTW_LIB = ${MKLROOT}/interfaces/fftw3xf/
	PATH_FFTW_INCL = -I${MKLROOT}/interfaces/fftw3xf/
	ifneq (,$(findstring OPT, ${MODE}))
		FFLAGS =  -I${MKLROOT}/include/intel64/ilp64 -i8  -I"${MKLROOT}/include" -O3 -r8  -fno-alias -unroll -static-intel
		FFLAGS = -O3 -r8  -fno-alias -unroll -fPIC -static-intel
	        CFLAGS = -O3
	endif
	ifneq (,$(findstring YES,${USEBLAS}))
                LFLAGS = ${MKLROOT}/lib/intel64/libmkl_blas95_lp64.a ${MKLROOT}/lib/intel64/libmkl_lapack95_lp64.a \
                         -Wl,--start-group ${MKLROOT}/lib/intel64/libmkl_intel_lp64.a ${MKLROOT}/lib/intel64/libmkl_sequential.a \
                          ${MKLROOT}/lib/intel64/libmkl_core.a -Wl,--end-group -lpthread -lm -ldl \
                          ${PATH_FFTW_LIB}libfftw3xf_intel.a ${PATH_FFTW_INCL} -lm -static
		BLAS = 
	endif
	ifneq (,$(findstring OPENMP, ${PARALLEL}))
       		F77 = mpif90
        	F90 = mpif90
       		PATH_MPI_LIB = /opt/openmpi/lib/
        	PATH_MPI_INC = /opt/openmpi/include/
		PARLFLAGS = -L${PATH_MKL} -lmkl_scalapack_lp64 -lmkl_intel_lp64 -lmkl_sequential \ 
                            -lmkl_core -lmkl_blacs_intelmpi_lp64 -lpthread -lm \
		            ${PATH_FFTW_INCL} ${PATH_FFTW_LIB}libfftw3xf_ifort.a -lm -Bdynamic \
                            -L${PATH_MPI_LIB} -I${PATH_MPI_INC} -lmpi	
		LFLAGS = 
 		FFLAGS = -r8 -O2 -funroll-loops -mtune=pentium4 -assume byterecl -align -pad 
	        CFLAGS = ${FFLAGS}
	endif
	ifneq (,$(findstring MPI, ${PARALLEL}))
		ifneq (,$(findstring SCALAPACK, ${METHOD}))
        		F77 = mpiifort
	        	F90 = mpiifort
        		PATH_MPI_LIB = ${I_MPI_ROOT}/lib/debug_mt/
	        	PATH_MPI_INC = ${I_MPI_ROOT}/include/
			PARLFLAGS =   ${MKLROOT}/lib/intel64/libmkl_blas95_ilp64.a ${MKLROOT}/lib/intel64/libmkl_lapack95_ilp64.a \
                                      -L${MKLROOT}/lib/intel64 -lmkl_scalapack_ilp64 -lmkl_intel_ilp64 \
                                      -lmkl_sequential -lmkl_core -lmkl_blacs_intelmpi_ilp64 -lpthread -lm -ldl \
                                      ${PATH_FFTW_LIB}libfftw3xf_intel.a ${PATH_FFTW_INCL} -lm
			LFLAGS = 
 			FFLAGS = -I${MKLROOT}/include/intel64/ilp64 -i8  -I"${MKLROOT}/include" -r8 
 			CFLAGS = -O3 -fno-alias -unroll
		endif
	endif
	CC = icc
endif
