mpdboot

export PATH=/opt/intel/impi/4.1.0.024/bin64/:$PATH
export LD_LIBRARY_PATH=/opt/intel/impi/4.1.0.024/lib64/:$LD_LIBRARY_PATH
PATH=$PATH:~/bin/xeo/:~/bin
module load intel/intel-12
mpdboot

export PATH=/opt/intel/impi/4.1.0.024/bin64/:$PATH
export LD_LIBRARY_PATH=/opt/intel/impi/4.1.0.024/lib64/:$LD_LIBRARY_PATH
PATH=$PATH:~/bin/xeo/:~/bin
